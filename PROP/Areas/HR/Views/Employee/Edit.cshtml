@model PROP.Areas.HR.Models.Employee

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Employee</h4>
<hr />
<div class="row">
